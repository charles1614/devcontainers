{
  "name": "Scala Dev",
  "build": {
		"dockerfile": "Dockerfile"
	},
  // "image": "ghcr.io/devcontainers-contrib/features/scala-sdkman:2:${templateOption:imageVariant}",
  // ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "${templateOption:jdkVersion}",
      "jdkDistro": "open",
      "installMaven": "true",
      "mavenVersion": "3.8.6",
      "installGradle": "false"
    },
    "ghcr.io/devcontainers-contrib/features/scala-sdkman:2": {
      "version": "${templateOption:scalaVersion}",
      "jdkVersion": "${templateOption:jdkVersion}",
      "jdkDistro": "open"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": "false"
    }
  },
  // ðŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],
  // "postCreateCommand": "echo '${templateOption:favorite}' > /tmp/color.txt"
  // ðŸ‘‡ Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Set *default* container specific settings.json values on container create.
      "settings": {},
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "vscjava.vscode-java-pack"
      ]
    }
  },
  // ðŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  "remoteUser": "vscode"
}